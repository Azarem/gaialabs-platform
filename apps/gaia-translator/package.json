{
  "name": "gaia-translator",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Community platform for collaborative translation of Illusion of Gaia and other game scripts",
  "scripts": {
    "dev": "vite --port 3003",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 3003",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "deploy": "tsx ../../scripts/deploy.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@gaialabs/auth": "workspace:*",
    "@gaialabs/core": "workspace:*",
    "@gaialabs/shared": "workspace:*",
    "@gaialabs/ui": "workspace:*",
    "@hookform/resolvers": "^3.10.0",
    "@prisma/client": "^6.11.1",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.39.0",
    "@tailwindcss/typography": "^0.5.15",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.525.0",
    "openai": "^5.11.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.54.0",
    "react-hot-toast": "^2.4.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.28.0",
    "rehype-highlight": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "zod": "^4.0.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^20.19.6",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "postcss": "^8.4.32",
    "prisma": "^6.11.1",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.6.2",
    "typescript": "^5.8.3",
    "vite": "^6.0.7"
  },
  "keywords": [
    "translation",
    "community",
    "illusion-of-gaia",
    "game-localization",
    "collaborative",
    "vite",
    "spa",
    "react",
    "typescript"
  ],
  "author": "GaiaLabs Team",
  "license": "MIT"
}
